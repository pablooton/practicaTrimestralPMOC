<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.pmoc.practicatrim.practicatrimestralpmoc.controller.MarketController"
            prefHeight="700.0" prefWidth="1000.0">

    <VBox spacing="10.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Label text="Presupuesto Restante:" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <Label fx:id="lblPresupuesto" text="100.000.000 €" style="-fx-font-weight: bold; -fx-text-fill: #007bff; -fx-font-size: 16px;"/>
        </HBox>

        <SplitPane dividerPositions="0.6" orientation="VERTICAL" VBox.vgrow="ALWAYS">

            <AnchorPane>
                <VBox AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" spacing="5.0">
                    <Label text="Mercado de Jugadores Libres" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <TableView fx:id="marketTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="marketNombreCol" text="Jugador" prefWidth="150.0"/>
                            <TableColumn fx:id="marketPosicionCol" text="Pos." prefWidth="60.0"/>
                            <TableColumn fx:id="marketPuntosCol" text="Puntos" prefWidth="70.0"/>
                            <TableColumn fx:id="marketValorCol" text="Precio (€)" prefWidth="120.0"/>
                            <TableColumn fx:id="marketAccionCol" text="Fichar" prefWidth="80.0"/>
                        </columns>
                    </TableView>
                </VBox>
            </AnchorPane>

            <AnchorPane>
                <VBox AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" spacing="5.0">
                    <Label text="Mi Plantilla Actual" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <TableView fx:id="myTeamTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="teamNombreCol" text="Jugador" prefWidth="150.0"/>
                            <TableColumn fx:id="teamPosicionCol" text="Pos." prefWidth="60.0"/>
                            <TableColumn fx:id="teamPuntosCol" text="Puntos" prefWidth="70.0"/>
                            <TableColumn fx:id="teamAccionCol" text="Vender" prefWidth="80.0"/>
                        </columns>
                    </TableView>
                </VBox>
            </AnchorPane>
        </SplitPane>
    </VBox>
</AnchorPane>