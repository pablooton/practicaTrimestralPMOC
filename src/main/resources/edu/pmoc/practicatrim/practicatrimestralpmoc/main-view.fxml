<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.pmoc.practicatrim.practicatrimestralpmoc.controller.MainController">
    <top>
        <MenuBar>
            <Menu mnemonicParsing="false" text="Archivo">

                <MenuItem mnemonicParsing="false" onAction="#handleLogout" text="Cerrar Sesión" />

            </Menu>
            <Menu mnemonicParsing="false" text="Ver">

                <MenuItem mnemonicParsing="false" onAction="#handleShowUserProfile" text="Mi Perfil" />

            </Menu>
            <Menu fx:id="menuGestionDatos" mnemonicParsing="false" text="Gestión datos">

                <MenuItem  mnemonicParsing="false" onAction="#handleJugadores" text="Gestión Jugadores" />
                <MenuItem  mnemonicParsing="false" onAction="#handleEquipos" text="Gestión Equipos"/>
                <MenuItem  mnemonicParsing="false" onAction="#handleUsers" text="Gestión Usuarios"/>
            </Menu>
        </MenuBar>
    </top>
    <left>
        <VBox prefWidth="150.0" spacing="10" style="-fx-padding: 10;">
                <Button maxWidth="1.7976931348623157E308" onAction="#handleShowUsers" text="Mi equipo" />
                <Button maxWidth="1.7976931348623157E308" text="Mercado" onAction="#handleMercado"/>
        </VBox>
    </left>
    <center>
        <BorderPane fx:id="mainContentPane" />
    </center>
</BorderPane>