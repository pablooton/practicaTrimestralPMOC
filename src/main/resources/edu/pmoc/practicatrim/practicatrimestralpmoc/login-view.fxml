<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.pmoc.practicatrim.practicatrimestralpmoc.controller.LoginController"
            fx:id="mainPane">
    <top>
        <HBox alignment="CENTER" fx:id="tituloContainer">
            <Label text="LlorosFantasy">
                <font>
                    <Font name="Broadway" size="18"/>
                </font>
            </Label>
        </HBox>
    </top>
    <center>
        <VBox fx:id="contenedorLogin" alignment="CENTER" spacing="10">
            <Label fx:id="nombreU" prefWidth="200" text="Nombre Usuario">
                <font>
                    <Font name="Algerian"/>
                </font>
            </Label>
            <TextField fx:id="nombreT" promptText="Ingrese su nombre de usuario" maxWidth="200"/>

            <Label fx:id="contraseñaU" prefWidth="200" text="Contraseña">
                <font>
                    <Font name="Algerian"/>
                </font>
            </Label>
            <PasswordField fx:id="contraseñaT" maxWidth="200"/>

            <Button fx:id="_loginButton" onAction="#manageLogin" text="INICIAR">
                <font>
                    <Font name="Algerian"/>
                </font>
            </Button>


        </VBox>
    </center>
</BorderPane>
